<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/disenio_item"
    android:id="@+id/main"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/nombre_grupo_creado"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="3dp"
        android:text="Nombre"
        android:textColor="@color/green_light"
        android:textSize="22sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/lugar_grupo_creado"
        app:layout_constraintVertical_weight="2"
        android:shadowColor="@color/white"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"/>

    <TextView
        android:id="@+id/lugar_grupo_creado"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="3dp"
        android:text="Lugar"
        android:textColor="@color/green_light"
        android:textSize="22sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nombre_grupo_creado"
        app:layout_constraintBottom_toTopOf="@id/miembros_text"
        app:layout_constraintVertical_weight="1"
        android:shadowColor="@color/white"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"/>

    <TextView
        android:id="@+id/miembros_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/green_light"
        android:text="Numero de miembros: "
        android:textSize="17sp"
        android:paddingStart="3dp"
        android:textAlignment="textEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/miembros_num"
        app:layout_constraintTop_toBottomOf="@id/lugar_grupo_creado"
        app:layout_constraintBottom_toTopOf="@id/avatar_grupo_creado"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintHorizontal_weight="3"
        android:shadowColor="@color/white"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2" />

    <TextView
        android:id="@+id/miembros_num"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/green_light"
        android:text="0000"
        android:textSize="17sp"
        android:paddingStart="3dp"
        app:layout_constraintStart_toEndOf="@id/miembros_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lugar_grupo_creado"
        app:layout_constraintBottom_toTopOf="@id/avatar_grupo_creado"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintHorizontal_weight="2"
        android:shadowColor="@color/white"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2" />

    <ImageView
        android:id="@+id/avatar_grupo_creado"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:src="@drawable/telefono_blanco"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@id/edit_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/miembros_text"
        app:layout_constraintVertical_weight="8"
        android:padding="3dp"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/edit_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/edit_blanco"
        android:background="@null"
        android:paddingTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/avatar_grupo_creado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/delete_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="fitCenter"
        android:visibility="invisible"
        app:layout_constraintVertical_weight="2"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/delete_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="2dp"
        android:src="@drawable/delete_blanco"
        android:background="@null"
        app:layout_constraintTop_toBottomOf="@id/avatar_grupo_creado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/edit_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_weight="2"
        android:scaleType="fitCenter"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>